{
  "Qdrant": {
    "Url": "http://localhost:6333/"
  },
  "CaaP": {
    "S": ""
  },
  "Chunk": {
    "Size": "1500",
    "Conjunction": 5,
    "SplitByWords": true
  },

  "DockerLaunch": {
    "DockerSettings": [
      {
        "ImageName": "postgres/latest",
        "ContainerName": "postgresdb",
        "HostPort": 5432,
        "ContainerPort": 5432,
        "WaitForPort": 5432,
        "EnvironmentVars": {
          "POSTGRES_USER": "postgres",
          "POSTGRES_PASSWORD": "adminAbc123456789@$"
        }
      }
    ]
  },
  "databaseConnection": {
    "MigrationAssembly": "AI.CaaP.Repository",
    "UseProvider": "mssql",
    "ConnectionString": "Server=localhost;Database=Conversations;Integrated Security=true;Trust Server Certificate=true"
  },

  //"databaseConnection": {
  //  "MigrationAssembly": "AI.CaaP.Repository",
  //  "useProvider": "postgres",
  //  "ConnectionString": "User ID=Conversations;Password=<>;Host=localhost;Port=5432;Database=Conversations"
  //}

  "WebApi": {
    "statePersistencePath": "./StatePersistence",
    "modelStatePersistencePath": "./ModelStatePersistence"
  },
  "AllowedHosts": "*",
  "Cors": {
    "origins": [],
    "policy": "AllowedPolicies"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "<read from user secrets or keyvault>",
    "TenantId": "<read from user secrets or keyvault>",
    "ClientId": "<read from user secrets or keyvault>"
  },
  "appLogging": {
    "OpenTelemetry": {
      "Endpoint": "http://localhost:4317",
      "Protocol": "Grpc"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message:lj}{NewLine}{Exception}"
        }
      },
      { "Name": "DiagnosticTrace" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithExceptionDetails" ],
    "Properties": {
      "Application": "AI.CaaP.Integration.Tests"
    }
  }
}
